<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:paddingBottom="16dp"
android:paddingLeft="16dp"
android:paddingRight="16dp"
android:paddingTop="16dp"
tools:context=".LectorFragment">
    <TextView
        android:textSize="20sp"
        android:textStyle="bold"
        android:id="@+id/tvLector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lector" />

    <EditText
        android:id="@+id/fltextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <requestFocus/>
    </EditText>
    <TextView
        android:textSize="20sp"
        android:textStyle="bold"
        android:id="@+id/tvLectorMensajes"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         />
    <TextView
        android:textSize="20sp"
        android:textStyle="bold"
        android:id="@+id/tvLectorMensajesDestino"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:textSize="20sp"
        android:textStyle="bold"
        android:id="@+id/tvLectorMensajesTransportador"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />



</LinearLayout>