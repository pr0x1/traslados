<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context=".CentrosActivity">

    <TextView
        android:textSize="20sp"
        android:textStyle="bold"
        android:id="@+id/tAlmOrig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/alm_origen" />

    <View
        android:id="@+id/vCentDest"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/holo_blue_dark"
        >

    </View>
    <EditText
        android:id="@+id/etCentros"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <requestFocus/>
    </EditText>
    <View
        android:id="@+id/vAlmDest"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/holo_blue_dark">

    </View>

    <TextView
        android:id="@+id/tvCentroMensajes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginTop="16dp"
        />

    <Button
        android:id="@+id/btnOtroTransporte"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/otroTransporte"
        android:visibility="gone"/>


</LinearLayout>